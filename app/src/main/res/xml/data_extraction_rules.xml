<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Include the shared preferences -->
        <include domain="sharedpref" path="my_preferences.xml" />

        <!-- Include a database file -->
        <include domain="database" path="my_app.db" />

        <!-- Exclude the cache directory -->
        <exclude domain="file" path="cache/" />

        <!-- Exclude temporary files -->
        <exclude domain="file" path="temp/" />
    </cloud-backup>

    <!-- Optional: you can define rules for device-to-device transfer similarly -->
    <!--
    <device-transfer>
        <include domain="sharedpref" path="my_preferences.xml" />
        <exclude domain="file" path="cache/" />
    </device-transfer>
    -->
</data-extraction-rules>
